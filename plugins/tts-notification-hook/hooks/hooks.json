{
  "description": "TTS notifications for Claude Code tool completions using ElevenLabs API",
  "version": "1.0.0",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "description": "Generate TTS notifications for all tool completions",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/tts-notification-hook/dist/post-tool-use.js",
            "timeout": 10,
            "background": true,
            "description": "Execute TTS notification hook in background"
          }
        ]
      }
    ]
  },
  "requirements": {
    "platform": "darwin",
    "description": "Requires macOS for afplay audio support"
  },
  "configuration": {
    "environmentVariables": [
      {
        "name": "ELEVENLABS_API_KEY",
        "required": true,
        "description": "ElevenLabs API key for TTS service"
      },
      {
        "name": "TTS_VOICE_ID",
        "required": false,
        "default": "Xb7hH8MSUJpSbSDYk0k2",
        "description": "ElevenLabs voice ID (default: Rachel)"
      },
      {
        "name": "TTS_MODEL",
        "required": false,
        "default": "eleven_turbo_v2_5",
        "description": "ElevenLabs TTS model"
      },
      {
        "name": "TTS_ENABLED",
        "required": false,
        "default": "true",
        "description": "Enable/disable TTS notifications"
      },
      {
        "name": "TTS_SKIP_TOOLS",
        "required": false,
        "default": "Read,Glob",
        "description": "Comma-separated list of tools to skip for TTS"
      },
      {
        "name": "TTS_STABILITY",
        "required": false,
        "default": "0.5",
        "description": "Voice stability setting (0-1)"
      },
      {
        "name": "TTS_SIMILARITY_BOOST",
        "required": false,
        "default": "0.75",
        "description": "Voice similarity boost setting (0-1)"
      },
      {
        "name": "TTS_TIMEOUT",
        "required": false,
        "default": "10000",
        "description": "TTS request timeout in milliseconds"
      },
      {
        "name": "TTS_MAX_RETRIES",
        "required": false,
        "default": "2",
        "description": "Maximum retry attempts for TTS requests"
      },
      {
        "name": "TTS_CLEANUP",
        "required": false,
        "default": "true",
        "description": "Enable automatic cleanup of temporary audio files"
      }
    ]
  },
  "metadata": {
    "author": {
      "name": "Jimming Cheng",
      "email": "jimming@gmail.com"
    },
    "keywords": [
      "tts",
      "notifications",
      "accessibility",
      "elevenlabs",
      "audio"
    ],
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/jcheng/my-claude-code-plugins"
    }
  }
}