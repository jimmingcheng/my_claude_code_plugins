{
  "name": "ping-me",
  "version": "1.0.0",
  "description": "On-demand notification skill for Claude Code with TTS support using ElevenLabs API",
  "main": "dist/ping-me.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist && rm -rf temp/*.wav",
    "test": "node dist/ping-me.js",
    "test:hello": "node dist/ping-me.js message=\"Hello from development!\"",
    "prebuild": "npm run clean",
    "start": "npm run build && node dist/ping-me.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude-code",
    "skill",
    "notifications",
    "tts",
    "elevenlabs",
    "accessibility",
    "ping"
  ],
  "author": {
    "name": "Jimming Cheng",
    "email": "jimming@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^2.7.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.9",
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}